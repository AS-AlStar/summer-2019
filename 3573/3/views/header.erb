<header>
  <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="active"><a href="/">MAIN PAGE</a></li>
        <% if session[:user_id] %>
        <li><a href="/logout">Sign Out</a></li>
          <li><%= %></li>
        <% else %>
        <li><a href="/register">Registration</a></li>
        <li><a href="/login">Sign In</a></li>
        <% end %>
      </ul>
      <div class="navbar-header navbar-right">
        <a class="navbar-brand" href="/">Places of Minsk</a>
      </div>
    </div>
  </nav>
</header>

<% if session[:message] %>
  <div id="error" class="w3-modal" style="display: block;">
    <div class="w3-modal-content w3-card-4 w3-animate-zoom" style="width: 400px;">
      <div class="w3-section w3-center">
        <div><label class="w3-padding-36 w3-center w3-panel"><%= session[:message] %></label></div>
        <a href="/logout" id="closeError" class="w3-button w3-block w3-red w3-section w3-padding" type="submit">Cancel</a>
      </div>
    </div>
  </div>
<% end %>
